<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DepolarActivity"
    android:orientation="vertical">

  <TextView
      android:id="@+id/textView"
      android:layout_width="match_parent"
      android:layout_height="@dimen/txtTumUrunlerHeight"
      android:gravity="center"
      android:text="@string/txtTumDepolar"
      android:textSize="@dimen/tumIslemler"
      android:textStyle="bold" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerView"
      android:layout_width="match_parent"
      android:layout_height="@dimen/s覺f覺r"
      android:layout_weight="@dimen/rcyWeight"
      android:scrollbars="vertical"
       />

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/depoEkleFab"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/s覺f覺r"
      android:layout_marginStart="@dimen/fabMarginStart"
      android:contentDescription="@null"
      android:layout_weight="@dimen/floatingweight"
      android:clickable="true"
      app:maxImageSize="@dimen/floatingMaxSize"
      android:src="@drawable/baseline_add_white_18"/>
</LinearLayout>